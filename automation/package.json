{
  "name": "sintaxis-ia-automation",
  "version": "1.0.0",
  "description": "Scripts de automatizaci√≥n para Sintaxis IA",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/src/index.js",
    "dev": "ts-node src/index.ts",
    "fetch": "ts-node src/index.ts",
    "generate": "ts-node src/index.ts",
    "validate": "ts-node src/codeValidator.ts",
    "watch": "ts-node src/watcher.ts",
    "check": "tsc --noEmit",
    "pipeline": "ts-node src/cli.ts",
    "pipeline:dry": "ts-node src/cli.ts --dry",
    "pipeline:dry-real": "ts-node src/cli.ts --dry-real",
    "pipeline:force": "ts-node src/cli.ts --force",
    "pipeline:prod": "ts-node src/cli.ts --prod",
    "pipeline:help": "ts-node src/cli.ts --help",
    "news-manager": "ts-node src/news-manager-cli.ts",
    "news-manager:history": "ts-node src/news-manager-cli.ts history",
    "news-manager:active": "ts-node src/news-manager-cli.ts active",
    "news-manager:expired": "ts-node src/news-manager-cli.ts expired",
    "news-manager:stats": "ts-node src/news-manager-cli.ts stats",
    "news-manager:cleanup": "ts-node src/news-manager-cli.ts cleanup",
    "news-manager:help": "ts-node src/news-manager-cli.ts --help"
  },
  "keywords": [
    "youtube",
    "shorts",
    "ai",
    "automation",
    "remotion"
  ],
  "author": "Sintaxis IA",
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "axios": "^1.7.9",
    "dotenv": "^16.4.7",
    "googleapis": "^171.0.0",
    "node-telegram-bot-api": "^0.67.0",
    "openai": "^6.17.0",
    "resend": "^6.9.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.7",
    "@types/node-telegram-bot-api": "^0.64.13",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  },
  "overrides": {
    "form-data": "^4.0.0",
    "qs": "^6.14.1",
    "tough-cookie": "^4.1.3"
  }
}
